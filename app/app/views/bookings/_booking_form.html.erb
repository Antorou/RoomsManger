<!-- _booking_form.html.erb -->
<%= simple_form_for([@room, @booking], html: { class: "form-inline" }) do |f| %>
  <h4>Book</h4>


  <div>
    <%= f.label :starts_at, class: "form-label" %>
    <%= f.input :starts_at,
      as: :string,
      input_html: { class: "form-control", id: "startDate", data: { controller: "datepicker" } },
      label: false
    %>
  </div>


  <div>
    <%= f.label :ends_at, class: "form-label" %>
    <%= f.input :ends_at,
      as: :string,
      input_html: { class: "form-control", id: "endDate", data: { controller: "datepicker" } },
      label: false
    %>
  </div>

  <div>
    <%= f.submit "Book it now", class: "btn btn-info text-white" %>
  </div>
<% end %>
